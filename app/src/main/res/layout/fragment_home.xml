<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundMain"
    tools:context="com.example.myser.dspotalpha.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <GridLayout
        android:id="@+id/homeFragmentGridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:columnCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/prefs1"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:onClick="loadFeed"
            android:orientation="vertical"
            android:padding="2dp"
            android:tag="@string/prefs1"
            android:weightSum="3">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:tag="@string/prefs1"
                app:srcCompat="@color/testColour1" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/preference_1"
                android:textColor="@color/testColour1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/prefs2"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:onClick="loadFeed"
            android:orientation="vertical"
            android:padding="2dp"
            android:tag="@string/prefs2"
            android:weightSum="3">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:tag="@string/prefs2"
                app:srcCompat="@color/testColour2" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/preference_2"
                android:textColor="@color/testColour1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/prefs3"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:onClick="loadFeed"
            android:orientation="vertical"
            android:padding="2dp"
            android:tag="@string/prefs3"
            android:weightSum="3">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:tag="@string/prefs3"
                app:srcCompat="@color/testColour3" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/preference_3"
                android:textColor="@color/testColour1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/prefs4"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:onClick="loadFeed"
            android:orientation="vertical"
            android:padding="2dp"
            android:tag="@string/prefs4"
            android:weightSum="3">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:tag="@string/prefs4"
                app:srcCompat="@color/testColour4" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/preference_4"
                android:textColor="@color/testColour1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/prefs5"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:onClick="loadFeed"
            android:orientation="vertical"
            android:padding="2dp"
            android:tag="@string/prefs5"
            android:weightSum="3">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:tag="@string/prefs5"
                app:srcCompat="@color/testColour7" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/preference_5"
                android:textColor="@color/testColour1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/prefs6"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:onClick="loadFeed"
            android:orientation="vertical"
            android:padding="2dp"
            android:tag="@string/prefs6"
            android:weightSum="3">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:tag="@string/prefs6"
                app:srcCompat="@color/testColour8" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/preference_6"
                android:textColor="@color/testColour1" />

        </LinearLayout>
    </GridLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/fab_margin"
        android:layout_marginEnd="@dimen/fab_margin"
        android:rotation="45"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />
</FrameLayout>
